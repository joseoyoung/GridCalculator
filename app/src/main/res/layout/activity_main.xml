<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.hs.emirim.joseoyoung.gridcalculator.MainActivity"
    android:gravity="center_horizontal"
    >
    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_row="0"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/but1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_row="0"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/but2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_row="0"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/but3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_row="0"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/but4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_row="0"
            android:layout_column="4"
            />
        <Button
            android:id="@+id/but5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/but6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/but7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_row="1"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/but8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_row="1"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/but9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_row="1"
            android:layout_column="4"
            />



    </GridLayout>

    <Button
        android:id="@+id/but_op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:text="+" />

    <Button
        android:id="@+id/but_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:text="-" />

    <Button
        android:id="@+id/but_op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_gravity="fill_vertical"
        />
    <Button
        android:id="@+id/but_op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_gravity="fill_vertical"
        />
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        />
</LinearLayout>
